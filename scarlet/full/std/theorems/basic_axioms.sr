inv_eq_t IS 
{
   y IS VAR(SELF)
   z IS VAR(y = SELF)

   z AS_LANGUAGE_ITEM(inv_eq_t_statement)

   AXIOM(inv_eq_t)
}
.VALUE

refl_t IS
{
