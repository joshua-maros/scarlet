eq_ext_rev_t IS 
{
   y IS VAR()
   z IS VAR(y = SELF)

   just(f(z) = f(y))
   AS_LANGUAGE_ITEM(eq_ext_rev_t_statement)

   AXIOM(eq_ext_rev_t)
}
.VALUE

# From y = z   y
