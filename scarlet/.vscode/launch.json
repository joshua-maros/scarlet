    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "full scarlet debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scarlet",
                    "--package=scarlet"
                ],
                "filter": {
                    "name": "scarlet",
                    "kind": "bin"
                }
            },
            "args": ["full"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "moderate scarlet debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scarlet",
                    "--package=scarlet"
                ],
                "filter": {
                    "name": "scarlet",
                    "kind": "bin"
                }
            },
            "args": ["moderate"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "mini scarlet debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scarlet",
                    "--package=scarlet",
                ],
                "filter": {
                    "name": "scarlet",
                    "kind": "bin"
                }
            },
            "args": ["mini"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'scarlet'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=scarlet",
                    "--package=scarlet"
                ],
                "filter": {
                    "name": "scarlet",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}