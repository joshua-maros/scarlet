{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scarlet",
	"patterns": [
		{
			"name": "keyword.control",
			"match": "(sub|substituting|def|defining|Type|From|any|the|i32|integer|int|mat|matching|on|pick|pick_first_true_condition|instance_of|identifier|dis|displayed|builtin_item|target)[ \\r\\n\\t]*(?=\\{)"
		},
		{
			"name": "invalid.illegal",
			"match": "\\b[^ \\r\\n\\t\\{\\}\\(\\)\\[\\]]+[ \\r\\n\\t]*(?=\\{)"
		},
		{
			"name": "punctuation",
			"match": "[\\{\\}\\[\\]\\(\\)]"
		},
		{
			"name": "keyword.other",
			"match": "\\b(is|instance_of|vn|bt|else)\\b"
		},
		{
			"name": "keyword.operator",
			"match": "\\b(:|::|\\.)\\b"
		},
		{
			"name": "entity.name.type",
			"match": "\\b[A-Z][^ \\r\\n\\t\\{\\}\\(\\)\\[\\]]*\\b"
		},
		{
			"name": "entity.name.function",
			"match": "\\b[^ \\r\\n\\t\\{\\}\\(\\)\\[\\]]+[ \\r\\n\\t\\{\\}\\(\\)\\[\\]]*(?=\\[)\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b[0-9_]+\\b"
		},
		{
			"name": "variable",
			"match": "\\b[^ \\r\\n\\t\\{\\}\\(\\)\\[\\]]+\\b"
		},
		{
			"name": "comment.line",
			"match": "#[^=][^\\n]*$"
		},
		{
			"name": "comment.block",
			"begin": "#=",
			"end": "=#",
			"patterns": [
				{
					"name": "comment.block",
					"match": "."
				}
			]
		}
	],
	"scopeName": "source.scarlet"
}