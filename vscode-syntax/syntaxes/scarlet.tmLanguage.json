{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scarlet",
	"patterns": [
		{
			"name": "keyword.control",
			"match": "\\b(is|on|else|using|Builtin|V|Var|Variable|S|Shown|M|Matched|Shy|E|Eager)\\b"
		},
		{
			"name": "punctuation",
			"match": "[\\{\\}\\[\\]\\(\\)]"
		},
		{
			"name": "keyword.operator",
			"match": "\\b(:|::|\\.|\\+|-|\\*|\\/|matches|AND|OR|=|and|or|\\<|\\>)\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b[0-9_]+\\b"
		},
		{
			"name": "entity.name.type",
			"match": "\\b[0-9A-Z_]+\\b"
		},
		{
			"name": "entity.name.function",
			"match": "\\b[a-z0-9_]+[ \\r\\n\\t]*(?=\\()\\b"
		},
		{
			"name": "variable",
			"match": "\\b[a-z0-9_]+\\b"
		},
		{
			"name": "comment.line",
			"match": "#[^=][^\\n]*$"
		},
		{
			"name": "comment.block",
			"begin": "#=",
			"end": "=#",
			"patterns": [
				{
					"name": "comment.block",
					"match": "."
				}
			]
		}
	],
	"scopeName": "source.scarlet"
}