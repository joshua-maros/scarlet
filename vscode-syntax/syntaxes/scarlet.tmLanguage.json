{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scarlet",
	"patterns": [
		{
			"name": "keyword.control",
			"match": "\\b(is|any|builtin|matches|match|on|else|show)\\b"
		},
		{
			"name": "punctuation",
			"match": "[\\{\\}\\[\\]\\(\\)]"
		},
		{
			"name": "keyword.operator",
			"match": "(:|::|\\.|\\+|-|\\*|\\/)"
		},
		{
			"name": "constant.numeric",
			"match": "\\b[0-9_]+\\b"
		},
		{
			"name": "entity.name.type",
			"match": "\\b[0-9A-Z_]+\\b"
		},
		{
			"name": "entity.name.function",
			"match": "\\b[^ \\r\\n\\t\\{\\}\\(\\)\\[\\]\\:\\.\\+\\-\\*\\/]+[ \\r\\n\\t]*(?=\\()\\b"
		},
		{
			"name": "variable",
			"match": "\\b[^ \\r\\n\\t\\{\\}\\(\\)\\[\\]\\:\\.\\+\\-\\*\\/]+\\b"
		},
		{
			"name": "comment.line",
			"match": "#[^=][^\\n]*$"
		},
		{
			"name": "comment.block",
			"begin": "#=",
			"end": "=#",
			"patterns": [
				{
					"name": "comment.block",
					"match": "."
				}
			]
		}
	],
	"scopeName": "source.scarlet"
}