{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nodespeak",
	"patterns": [
		{
			"name": "constant.numeric",
			"match": "\\b(-?[0-9]+)\\b"
		},
		{
			"name": "keyword.operator",
			"match": "\\b(\\+|-|\\*|/|~|\\.\\.)\\b"
		},
		{
			"name": "entity.name.function",
			"match": "(?<=worker|child)((\\s*)\\w*)"
		},
		{
			"name": "variable.language",
			"match": "((\\$|#)(\\w+))"
		},
		{
			"name": "storage.type",
			"match": "\\b(var|const)\\b"
		},
		{
			"name": "storage.type",
			"match": "\\b(worker|child)\\b"
		},
		{
			"name": "keyword.control",
			"match": "\\b(loop|do|while|link|load|if|elif|else|wake|then|sleep|reset|replicate|sleep)\\b"
		},
		{
			"name": "entity.name.function",
			"match": "(?<=wake|replicate)((\\s*)\\w*)"
		},
		{
			"name": "variable.name",
			"match": "[a-z](\\w*)"
		},
		{
			"name": "constant.other",
			"match": "[A-Z](\\w*)"
		}
	],
	"scopeName": "source.nodespeak"
}