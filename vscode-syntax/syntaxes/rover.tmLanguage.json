{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scarlet",
	"patterns": [
		{
			"name": "keyword.control",
			"match": "(replacing|defining|Type|From|any|the|i32|integer|int|isv|is_variant|is_same_variant_as|onv|on_variants|pick|pick_first_true_condition|variant|identifier|info|builtin_item|builtin_operation)[ \\r\\n\\t]*(?=\\{)"
		},
		{
			"name": "invalid.illegal",
			"match": "\\b[a-zA-Z0-9]+[ \\r\\n\\t]*(?=\\{)"
		},
		{
			"name": "punctuation",
			"match": "[\\{\\}\\[\\]\\(\\)]"
		},
		{
			"name": "keyword.other",
			"match": "\\b(is|with|variant|vn|t|bt|if|elif|else|p|param|parameter)\\b"
		},
		{
			"name": "keyword.operator",
			"match": "\\b(:|::|\\.)\\b"
		},
		{
			"name": "entity.name.type",
			"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
		},
		{
			"name": "entity.name.function",
			"match": "\\b[a-zA-Z0-9]+[ \\r\\n\\t]*(?=\\[)\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b[0-9_]+\\b"
		},
		{
			"name": "variable",
			"match": "\\b[a-zA-Z0-9]+\\b"
		},
		{
			"name": "comment.line",
			"match": "#[^=][^\\n]*$"
		},
		{
			"name": "comment.block",
			"begin": "#=",
			"end": "=#",
			"patterns": [
				{
					"name": "comment.block",
					"match": "."
				}
			]
		}
	],
	"scopeName": "source.scarlet"
}